<% include inc/detail_header %>
<div class="page">
    <% include inc/navbar %>
    <div class="content">
        <div class="article-body">
        <div id="article-title">
            <h1>
                <a href="<%=site.baseUrl%><%= article.link %>"><%= article.title %></a>
            </h1>
        </div>
        <div id="article-meta">
            作者 <%= article.author %> | 发布于 <%= article.postedOn %>
        </div>
        <div id="article-tags">
        <% article.tags.forEach(function (tag) { %>
        <a class="tag" href="<%=site.baseUrl%>/tag.html#<%= tag %>"><%= tag %></a>
        <% }); %>
        </div>
        <div id="article-content">
            <%- article.content %>
        </div>
            <div id="article-next">
                <%
                    var next =null;
                    var prev = null;
                   for(var i=0; i<articles.length;i++){
                        if(articles[i].id==article.id){
                            if(i==0){
                                prev =null;
                                next=articles[i+1];
                            }else if(i==articles.length-1){
                                next=null;
                                prev=articles[i-1];
                            }else{
                                prev=articles[i-1];
                                next=articles[i+1];
                            }
                            break;
                        }
                    }
                  %>
                <div class="left">
                    <span>上一篇:</span>
                    <% if(prev){%>
                    <a href="<%=site.baseUrl%>/articles/<%=prev.id%>.html"><%=prev.title%></a>
                    <%}else{%>
                        <span>没有了!</span>
                    <%}%>
                </div>
                <div class="right">
                    <span>下一篇:</span>
                    <% if(next){%>
                    <a href="<%=site.baseUrl%>/articles/<%= next.id %>.html"><%=next.title%></a>
                    <%}else{%>
                    <span>没有了!</span>
                    <%}%>
                </div>
            </div>
